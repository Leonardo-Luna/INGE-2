{% extends 'layout/base.html.twig' %}

{% block content %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm rounded-lg mx-auto" style="max-width: 600px; width: 90vw; margin-top: 60px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="ri-user-add-line me-2"></i> Registro de Cliente</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                    {{ form_rest(form) }}
                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="ri-save-line me-1"></i> Guardar
                    </button>
                    <a href="{{ path('app_usuarios_nuevo_cliente') }}" class="btn btn-secondary">
                        <i class="ri-arrow-go-back-line me-1"></i> Cancelar
                    </a>
                </div>
            {{ form_end(form, { render_rest: false }) }}
        </div>
    </div>
{% endblock %}