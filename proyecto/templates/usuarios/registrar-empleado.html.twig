{% extends 'layout/base.html.twig' %}

{% block content %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm rounded-lg mx-auto" style="max-width: 600px; width: 90vw; margin-top: 60px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="ri-user-add-line me-2"></i> Registro de empleado</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el nombre del empleado',
                                                            'required' :'requiered',
                                                            'oninvalid' :"this.setCustomValidity('Por favor, ingresa el nombre del empleado.')",
                                                            'oninput':"this.setCustomValidity('')"
                    }}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.apellido, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.apellido, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el apellido del empleado',
                                                            'required' :'requiered',
                                                            'oninvalid' :"this.setCustomValidity('Por favor, ingresa el apellido del empleado.')",
                                                            'oninput':"this.setCustomValidity('')"
                    }}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.email, null, {'label': 'Correo electrónico', 'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el correo electrónico del empleado',
                                                'required' :'requiered',
                                                'oninvalid' :"this.setCustomValidity('Por favor, ingresa el email del empleado.')",
                                                'oninput':"this.setCustomValidity('')"
                    }}) }}
                    {{form_errors(form.email) }}
                </div>
                <div class="form-group mb-3">{#DNI estaba manejado no encontre donde lo limite de aca tmb#}
                    {{ form_label(form.dni, null, {'label': 'DNI', 'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dni, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese el DNI del empleado',
                                                        'required' :'requiered',
                                                        'pattern': '\\d{8}',
                                                        'onkeypress': 'return event.charCode >= 48 && event.charCode <= 57 ',
                                                        'oninvalid' :"this.setCustomValidity('Por favor, ingresa el DNI(8 digitos) del empleado.')",
                                                        'oninput':"this.setCustomValidity('')"
                    }}) }}
                    {{ form_errors(form.dni) }}
                </div>
                <div class="form-group mb-3">{#DNI estaba manejado no encontre donde lo limite de aca tmb#}
                    {{ form_label(form.fechaNacimiento, null, {'label': 'Fecha de nacimiento', 'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.fechaNacimiento, {'attr': {'class': 'form-control', 'placeholder': 'Ingresa la fecha de nacimiento del empleado',
                                                        'required' :'requiered',
                                                        'oninvalid' :"this.setCustomValidity('Por favor, ingresa la edad del empleado.')",
                                                        'oninput':"this.setCustomValidity('')"
                    }}) }}
                    {{ form_errors(form.dni) }} 
                </div>
                {{ form_rest(form) }}
                <div class="mt-2 mb-3 d-flex justify-content-between px-4">
                    <button type="submit" class="btn btn-success">
                        <i class="ri-save-line me-1"></i> Registrar Empleado
                    </button>
                    <a href="{{ path('app_usuarios_nuevo_empleado') }}" class="btn btn-secondary">
                        <i class="ri-arrow-go-back-line me-1"></i> Cancelar
                    </a>
                </div>
            {{ form_end(form, { render_rest: false }) }}
        </div>
    </div>
{% endblock %}