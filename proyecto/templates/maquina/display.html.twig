{% extends 'layout/base.html.twig' %}

{% block title %}Listado de Máquinas{% endblock %}

{% block content %}
<div class="contenedor">
    {% if maquinas is empty %}
        <div class="mensaje-vacio">No hay máquinas disponibles.</div>
    {% else %}
        {% for maquina in maquinas %}
            <a href="/maquina/{{ maquina.id }}" class="tarjeta">
                <div class="tarjeta-imagen">
                    <img src="{{ asset('images/maquinaria/' ~ maquina.imagenes[0]) }}" alt="{{ maquina.nombre }}">
                </div>
                <div class="tarjeta-detalles">
                    <h2>{{ maquina.nombre }}</h2>
                    <p class="descripcion">{{ maquina.descripcion }}</p>
                    <p class="anio">Año: {{ maquina.anio }}</p>
                </div>
                <div class="tarjeta-precio">
                    <p class="precio">${{ maquina.costoPorDia }}</p>
                    <p class="por-dia">Por día</p>
                </div>
            </a>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-color: #b3e5fc;
        margin: 0;
        font-family: sans-serif;
    }

    .contenedor {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .mensaje-vacio {
        background: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        font-size: 1.2rem;
    }

    .tarjeta {
        display: flex;
        flex-direction: row;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 20px;
        text-decoration: none;
        color: #333;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .tarjeta:hover {
        transform: scale(1.01);
    }

    .tarjeta-imagen {
        flex: 0 0 35%;
        max-height: 200px;
    }

    .tarjeta-imagen img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .tarjeta-detalles {
        flex: 1;
        padding: 15px;
    }

    .tarjeta-detalles h2 {
        margin: 0 0 8px;
        font-size: 1.3rem;
    }

    .descripcion {
        margin: 0 0 6px;
        font-size: 0.95rem;
        color: #555;
    }

    .anio {
        font-size: 0.85rem;
        color: #777;
    }

    .tarjeta-precio {
        flex: 0 0 100px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 15px;
        background-color: #f5f5f5;
    }

    .precio {
        margin: 0;
        font-size: 1.5rem;
        font-weight: bold;
        color: #2e7d32;
    }

    .por-dia {
        font-size: 0.8rem;
        color: #666;
    }

    @media (max-width: 700px) {
        .tarjeta {
            flex-direction: column;
        }

        .tarjeta-imagen,
        .tarjeta-precio {
            width: 100%;
        }

        .tarjeta-precio {
            flex-direction: row;
            justify-content: space-between;
            padding: 10px 15px;
        }
    }
</style>
{% endblock %}