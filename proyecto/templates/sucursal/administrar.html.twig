
{% extends 'layout/base.html.twig' %}

{% block title %}Alquil.AR{% endblock %}

{% block imports %}
    {{parent()}}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
{% endblock %}


{% block content %}
  <div class="perfil-container">
    <h1>{{ sucursal.nombre }}</h1>

    <div class="info-box">
      <p><strong>Dirección:</strong> {{ sucursal.direccion }}</p>
      <p><strong>Ciudad:</strong> {{ sucursal.ciudad }}</p>
      <p><strong>Horario de atención:</strong> {{ sucursal.horario }}</p>
    </div>

    <div class="acciones">
       

      <a REDIRECCION:"Esto estaria bueno que rediriga al catalogo con el filtro por sucursal ya seleccionado" class="btn">Ver máquinas</a> 

      <div class="info-box2">
        <p> Gestionar <p>
        <a REEMPLAZAR:"Este campo por la ruta adecuada a la HU" class="btn">Modificar Informacion</a>
        <b REEMPLAZAR:"Este campo por la ruta adecuada a la HU" class="btn">Eliminar Sucursal</b>
    </div>
  </div>


  <style>
    .perfil-container {
      max-width: 600px;
      margin: 2rem auto;
      padding: 2rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #f9f9f9;
      align-content:center;
    }
    .info-box p {
      margin: 0.5rem 0;
    }
    .acciones {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .btn {
      display: inline-block;
      padding: 10px;
      background-color: #007bff;
      color: white;
      text-align: center;
      text-decoration: none;
      border-radius: 4px;
      margin-bottom: 20px;
    }
    .btn:hover {
      background-color: #0056b3;
    }

        .info-box2{
        border :solid;
        border-color:grey;
        border-radius: 10px;
        padding:10px;
    }

     .info-box2 b {
        background-color: red;
        padding-left:35px;
        padding-right:35px;
        margin-left:20%;
    }

    .info-box2 b:hover {
        background-color: red;
        background-color:rgb(158, 0, 0);
    }
  </style>
{% endblock %}
