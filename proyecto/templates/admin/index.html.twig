{% extends 'layout/base.html.twig' %}

{% block title %}Gerencia - Panel de Gestión{% endblock %}

{% block content %}
<div class="container-fluid my-5">
    <h2 class="text-center display-4 fw-bold text-dark mb-5">Panel de Gestión</h2>

    <!-- Contenedor que engloba todos los botones -->
    <div class="mx-auto p-4 bg-white rounded shadow" style="width: 50%; max-width: 1100px;">
        <div class="row justify-content-center gx-2 gy-3">

            <!-- Maquinaria -->
            <div class="col-6 col-md-4 col-lg-2 d-flex justify-content-center">
                <a href="{{ path('panel_maquinaria') }}"
                   class="btn btn-primary d-flex flex-column align-items-center justify-content-center text-center"
                   style="width: 160px; height: 160px; font-size: 1.1rem;">
                    <i class="bi bi-gear-fill mb-2" style="font-size: 2.5rem;"></i>
                    Maquinaria
                </a>
            </div>

            <!-- Sucursales -->
            <div class="col-6 col-md-4 col-lg-2 d-flex justify-content-center">
                <a href="{{ path('panel_sucursales') }}"
                   class="btn btn-primary d-flex flex-column align-items-center justify-content-center text-center"
                   style="width: 160px; height: 160px; font-size: 1.1rem;">
                    <i class="bi bi-shop-window mb-2" style="font-size: 2.5rem;"></i>
                    Sucursales
                </a>
            </div>

            <!-- Usuarios -->
            <div class="col-6 col-md-4 col-lg-2 d-flex justify-content-center">
                <a href="{{ path('panel_usuarios') }}"
                   class="btn btn-primary d-flex flex-column align-items-center justify-content-center text-center"
                   style="width: 160px; height: 160px; font-size: 1.1rem;">
                    <i class="bi bi-people-fill mb-2" style="font-size: 2.5rem;"></i>
                    Usuarios
                </a>
            </div>

            <!-- Reportes -->
            <div class="col-6 col-md-4 col-lg-2 d-flex justify-content-center">
                <a href="{{ path('app_listado_reportes') }}"
                   class="btn btn-primary d-flex flex-column align-items-center justify-content-center text-center"
                   style="width: 160px; height: 160px; font-size: 1.1rem;">
                    <i class="bi bi-bar-chart-fill mb-2" style="font-size: 2.5rem;"></i>
                    Reportes
                </a>
            </div>

            <!-- Reservas -->
            <div class="col-6 col-md-4 col-lg-2 d-flex justify-content-center">
                <a href="{{ path('app_reservas') }}"
                   class="btn btn-primary d-flex flex-column align-items-center justify-content-center text-center"
                   style="width: 160px; height: 160px; font-size: 1.1rem;">
                    <i class="bi bi-calendar-event-fill mb-2" style="font-size: 2.5rem;"></i>
                    Reservas
                </a>
            </div>

        </div>
    </div>
</div>
{% endblock %}