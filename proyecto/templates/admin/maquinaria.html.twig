{% extends 'layout/base.html.twig' %}

{% block title %}Gestión de Maquinaria{% endblock %}

{% block content %}
<div class="container my-5">
    <h2 class="text-center display-4 fw-bold text-dark mb-5">Gestión de Maquinaria</h2>

    <div class="row row-cols-1 g-4">
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <a href="{{ path('app_maquina_nueva') }}" class="btn btn-outline-primary w-100 py-3 mb-3">
                        <i class="bi bi-plus-circle me-2"></i> Cargar Maquinaria
                    </a>
                    <a href="{{ path('app_listar_maquinaria') }}" class="btn btn-outline-primary w-100 py-3">
                        <i class="bi bi-list-ul me-2"></i> Listar Maquinaria
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}