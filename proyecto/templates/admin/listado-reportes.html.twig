{% extends 'layout/base.html.twig' %}

{% block title %}Gerencia - Listado de Reportes{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Listado de Reportes</h3>
                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <a href="{{ path('app_reportes_mas_alquiladas') }}" class="btn btn-outline-primary w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-gear-fill"></i>
                                    Maquinarias más alquiladas
                                </a>
                            </div>
                            <div class="col-12 col-md-6">
                                <a href="{{ path('app_reportes_mas_concurridas') }}" class="btn btn-outline-primary w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-building"></i>
                                    Sucursales más concurridas
                                </a>
                            </div>
                            <div class="col-12 col-md-6">
                                <a href="{{ path('app_reportes_mas_reservas') }}" class="btn btn-outline-primary w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-people-fill"></i>
                                    Clientes con más reservas
                                </a>
                            </div>
                            <div class="col-12 col-md-6">
                                <a href="{{ path('app_reportes_finanzas') }}" class="btn btn-outline-primary w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-cash-stack"></i>
                                    Reporte de Finanzas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}