{% extends 'layout/base.html.twig' %}

{% block title %}Gestión de Usuarios{% endblock %}

{% block content %}
<div class="container my-5">
    <h2 class="text-center display-4 fw-bold text-dark mb-5">Gestión de Usuarios</h2>

    <div class="row row-cols-1 g-4">
        <div class="col">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <a href="{{ path('app_usuarios_nuevo_cliente') }}" class="btn btn-outline-primary w-100 py-3 mb-3">
                        <i class="bi bi-person-plus-fill me-2"></i> Registrar Cliente
                    </a>
                    <a href="{{'RUTA_CREAR_EMPLEADO'}}" class="btn btn-outline-primary w-100 py-3 mb-3">
                        <i class="bi bi-person-badge-fill me-2"></i> Registrar Empleado
                    </a>
                    <a href="{{ path('app_lista_usuarios') }}" class="btn btn-outline-primary w-100 py-3">
                        <i class="bi bi-people-fill me-2"></i> Listar Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}