
{% extends 'layout/base.html.twig' %}
{% block title %}Alquil.AR{% endblock %}

{% block content %}
  <div class="perfil-container">
    <h1>
  Perfil de {{ user.nombre }} {{ user.apellido }}
  {% if 'ROLE_CLIENTE' in user.roles %}
    <span style="font-size: 1rem; color: gray;">(Cliente)</span>
  {% elseif 'ROLE_EMPLEADO' in user.roles %}
    <span style="font-size: 1rem; color: gray;">(Empleado)</span>
    {% elseif 'ROLE_GERENTE' in user.roles %}
    <span style="font-size: 1rem; color: gray;">(Gerente)</span>
  {% endif %}
</h1>

    <div class="info-box">
      <p><strong>Email:</strong> {{ user.email }}</p>
      <p><strong>DNI:</strong> {{ user.dni }}</p>

    </div>

    <div class="acciones">
    
      {% if 'ROLE_CLIENTE' in user.roles %}
        <div class="info-box2">
        <p> Ver historiales</p>
        <a href="{{ path('app_mis_reservas') }}" class="btn">Mis reservas</a>
        <a href="{{ path('app_mis_alquileres')}}" class="btn">Mis alquileres</a>
      {% endif %}
      </div>
      
    <div class="info-box2">
      <p> Modificar datos</p>
      <div>
        <a href="{{ path('app_reset_password') }}" class="btn">Cambiar contrase√±a</a>
        <a href="{{ path('app_listar_usuarios', {'id': user.id}) }}" class="btn">Editar perfil</a>
      </div>
      </div>
    </div>
  </div>

  <style>
    .info-box2{
        border :solid;
        border-color:grey;
        border-radius: 10px;
        padding:10px;
    }

    .info-box2 p{
        color:grey;
        font-size:large;
    }
    .perfil-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 2rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #fafafa;
    }
    .info-box p {
      margin: 0.5rem 0;
    }
    .acciones {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .btn {
      display: inline-block;
      padding: 0.6rem 1rem;
      background-color: #007bff;
      color: white;
      text-align: center;
      text-decoration: none;
      border-radius: 4px;
      margin-bottom:20px;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
{% endblock %}
