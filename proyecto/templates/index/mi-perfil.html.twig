{% extends 'layout/base.html.twig' %}

{% block title %}Mi Perfil - {{ user.nombre }} {{ user.apellido }}{% endblock %}

{% block content %}

<div class="container my-5">
    <h2 class="text-center display-4 fw-bold text-dark mb-5">Mi Perfil</h2>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Tarjeta de Información de Cuenta #}
            <div class="card shadow-lg border-0 rounded-3 mb-5">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                    <h2 class="h4 mb-0">Información de Cuenta</h2>
                </div>
                <div class="card-body p-4">
                    <form>
                        <div class="mb-3 row">
                            <label for="nombre" class="col-sm-4 col-form-label text-muted">Nombre:</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control-plaintext" id="nombre" value="{{ user.nombre }}">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="apellido" class="col-sm-4 col-form-label text-muted">Apellido:</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control-plaintext" id="apellido" value="{{ user.apellido }}">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="email" class="col-sm-4 col-form-label text-muted">Email:</label>
                            <div class="col-sm-8">
                                <input type="email" readonly class="form-control-plaintext" id="email" value="{{ user.email }}">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="dni" class="col-sm-4 col-form-label text-muted">DNI:</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control-plaintext" id="dni" value="{{ user.dni }}">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-lg border-0 rounded-3 mb-5">
                <div class="card-header bg-warning text-center py-3 rounded-top-3 position-relative">
                    <h2 class="h4 mb-0">Mis reservas</h2>
                    <a href="{{ path('app_mis_reservas') }}" class="stretched-link text-decoration-none"></a>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}
